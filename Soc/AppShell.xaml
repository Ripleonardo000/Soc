<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:soc"
       x:Class="soc.AppShell">

    <!-- Configuración de pestañas -->
    <TabBar>
        <!-- Primera pestaña: Inicio -->
        <ShellContent Title="Inicio"
                      ContentTemplate="{DataTemplate local:Inicio}" />

        <!-- Segunda pestaña: Clubes -->
        <ShellContent Title="Clubes"
                      ContentTemplate="{DataTemplate local:ClubesPage}" />

        <!-- Tercera pestaña: Jugadores -->
        <ShellContent Title="Jugadores"
                      ContentTemplate="{DataTemplate local:JugadoresPage}" />

        <!-- Cuarta pestaña: Ligas -->
        <ShellContent Title="Ligas"
                      ContentTemplate="{DataTemplate local:LigasPage}" />

        <!-- Quinta pestaña: LigasP -->
        <ShellContent Title="LigasP"
                      ContentTemplate="{DataTemplate local:ClubesFutPage}" />

        <!-- Nueva pestaña: ApiFutbol -->
        <ShellContent Title="Proximos Partidos"
                      ContentTemplate="{DataTemplate local:ApiFutbol}" />

        <ShellContent Title="Tabla de Posiciones"
              ContentTemplate="{DataTemplate local:TablaPosiciones}" />

        <ShellContent Title="Goleadores"
              ContentTemplate="{DataTemplate local:GoleadoresPage}" />

    </TabBar>

</Shell>

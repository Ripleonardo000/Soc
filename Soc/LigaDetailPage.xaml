<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="soc.LigaDetailPage"
             Title="{Binding LigaNombre}">

    <StackLayout Padding="20">
        <!-- Título de la liga -->
        <Label Text="{Binding LigaNombre}"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Aquí se muestra la descripción o detalles de la liga -->
        <Label Text="{Binding LigaDescripcion}"
               FontSize="18"
               TextColor="Gray"
               HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
